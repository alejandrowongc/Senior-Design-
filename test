#!/usr/bin/env python3
import cv2
import numpy as np
from picamera2 import Picamera2
import time
from datetime import datetime

# ============================================================
# ---------------- CAMERA CALIBRATION LOAD -------------------
# ============================================================

cal = np.load("camera_calib.npz")
mtx_full = cal["camera_matrix"]
dist = cal["dist_coeffs"]

orig_w, orig_h = 4056, 3040
view_w, view_h = 800, 480

scale_x = view_w / orig_w
scale_y = view_h / orig_h

mtx_scaled = np.array([
    [mtx_full[0,0] * scale_x, 0,                   mtx_full[0,2] * scale_x],
    [0,                   mtx_full[1,1] * scale_y, mtx_full[1,2] * scale_y],
    [0, 0, 1]
], dtype=np.float32)

new_mtx, _ = cv2.getOptimalNewCameraMatrix(
    mtx_scaled, dist, (view_w, view_h), 1, (view_w, view_h)
)

mapx, mapy = cv2.initUndistortRectifyMap(
    mtx_scaled, dist, None, new_mtx, (view_w, view_h), cv2.CV_32FC1
)

# ============================================================
# ---------------- CAMERA SETUP ------------------------------
# ============================================================

picam2 = Picamera2()
config = picam2.create_preview_configuration(main={"size": (view_w, view_h)})
picam2.configure(config)
picam2.start()
time.sleep(2)

picam2.set_controls({"AwbEnable": False, "AeEnable": False})
picam2.set_controls({"AwbMode": 0, "ColourGains": (1.8, 1.0)})

# ============================================================
# ----------------------- CONSTANTS ---------------------------
# ============================================================

ROI_X1, ROI_Y1, ROI_X2, ROI_Y2 = 10, 175, 790, 325
PIXELS_PER_INCH = 38.5

WINDOW_NAME = "Measurement View"
cv2.namedWindow(WINDOW_NAME, cv2.WINDOW_NORMAL)
cv2.setWindowProperty(WINDOW_NAME, cv2.WND_PROP_FULLSCREEN, cv2.WINDOW_FULLSCREEN)

print("Press 's' to save poster images | Press 'q' to quit")

# ============================================================
# -------------------------- LOOP -----------------------------
# ============================================================

while True:

    # ---- RAW FRAME ----
    frame = picam2.capture_array()
    frame = cv2.remap(frame, mapx, mapy, cv2.INTER_LINEAR)
    frame_rgb = cv2.cvtColor(frame, cv2.COLOR_BGR2RGB)

    img_raw = frame_rgb.copy()   # poster image 1

    # ---- Draw ROI ----
    cv2.rectangle(frame_rgb, (ROI_X1, ROI_Y1), (ROI_X2, ROI_Y2), (255, 0, 0), 2)

    # ---- Extract ROI ----
    roi = frame_rgb[ROI_Y1:ROI_Y2, ROI_X1:ROI_X2].copy()

    # ---- Edge + Contours ----
    gray = cv2.cvtColor(roi, cv2.COLOR_RGB2GRAY)
    blur = cv2.GaussianBlur(gray, (5, 5), 0)
    edges = cv2.Canny(blur, 50, 150)
    edges = cv2.morphologyEx(edges, cv2.MORPH_CLOSE, np.ones((3,3), np.uint8))

    img_edges = cv2.cvtColor(edges, cv2.COLOR_GRAY2BGR)  # poster image 2

    contours, _ = cv2.findContours(edges, cv2.RETR_EXTERNAL, cv2.CHAIN_APPROX_SIMPLE)

    # ---- Copy for contour view ----
    img_contour_measure = roi.copy()  # poster image 3

    # ---- Copy for final full frame ----
    img_final = frame_rgb.copy()      # poster image 4

    # ---- Measure all contours ----
    for cnt in contours:
        x, y, w, h = cv2.boundingRect(cnt)

        length_pixels = max(w, h)
        length_inches = length_pixels / PIXELS_PER_INCH

        # Draw on ROI view
        cv2.rectangle(img_contour_measure, (x, y), (x+w, y+h), (255,255,0), 1)
        cv2.putText(img_contour_measure,
                    f"{length_inches:.3f} in | {length_pixels}px",
                    (x, max(0, y-10)),
                    cv2.FONT_HERSHEY_SIMPLEX, 0.6,
                    (255,255,255), 2)

        # Draw in final full frame
        cv2.rectangle(img_final[ROI_Y1:ROI_Y2, ROI_X1:ROI_X2],
                      (x, y), (x+w, y+h),
                      (255,255,0), 1)

        cv2.putText(img_final,
                    f"{length_inches:.3f} in",
                    (ROI_X1 + x, ROI_Y1 + y - 10),
                    cv2.FONT_HERSHEY_SIMPLEX, 0.7,
                    (0,255,255), 2)

    # ---- Display live view ----
    cv2.imshow(WINDOW_NAME, img_final)

    key = cv2.waitKey(1) & 0xFF

    # ---- SAVE POSTER SET ----
    if key == ord('s'):
        ts = datetime.now().strftime("%Y%m%d_%H%M%S")
        cv2.imwrite(f"poster_raw_{ts}.png", img_raw)
        cv2.imwrite(f"poster_edges_{ts}.png", img_edges)
        cv2.imwrite(f"poster_contour_{ts}.png", img_contour_measure)
        cv2.imwrite(f"poster_final_{ts}.png", img_final)
        print("Saved poster images.")

    # ---- QUIT ----
    if key == ord('q'):
        break

cv2.destroyAllWindows()
picam2.stop()
